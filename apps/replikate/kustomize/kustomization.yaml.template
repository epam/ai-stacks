apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

namespace: ${kubeflow.namespace}
namePrefix: "${hub.componentName}-"

commonLabels:
  app.kubernetes.io/managed-by: hubctl
  app.kubernetes.io/instance: ${hub.componentName}

bases:
- "${kustomize.base}"

images:
- name: replikate
  newImage: ghcr.io/epam/hub-kubeflow-stacks/replikate
  newTag: 20221224-215506

generatorOptions:
  disableNameSuffixHash: true
